
## Retrieve window info with - $ xprop

## Default WSP for apps
assign [class="crx_cifhbcnohmdccbgoicgdjpfamggdegmo"] $ws5
assign [class="VirtualBox Manager"] $ws7
assign [class="Caprine"] $ws8
assign [class="Viber"] $ws9

## Code
for_window [class="Code"] layout stacking
assign [class="Code"] $ws2
for_window [class="jetbrains-rider"] layout stacking
assign [class="jetbrains-rider"] $ws2

## Brave
for_window [class="Brave"] layout stacking
assign [class="Brave"] $ws3

## DB
assign [class="DBeaver"] $ws6
for_window [class="DBeaver"] layout stacking
assign [class="MongoDB Compass"] $ws6
for_window [class="MongoDB Compass"] layout stacking

## CopyQ
for_window [instance="copyq"] floating enable

## ToDo CLI
bindsym $mod+Ctrl+t exec --no-startup-id "/usr/bin/gnome-terminal --class=floating_window -e 'td --interactive -g work'"

## Calendar
for_window [class="Gnome-calendar"] floating enable

## Calculator
for_window [class="Gnome-calculator"] floating enable
